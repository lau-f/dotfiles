##### xterm #####
xterm*background: #000000

##### urxvt #####
URxvt*background: #000000
URxvt*foreground: #FFFFFF

URxvt*font:            xft:Ubuntu Mono:size=13:antialias=true:autohint=true,xft:Ubuntu Mono for Powerline:size=9
URxvt*boldFont:        xft:Ubuntu Mono:size=13:antialias=true:autohint=true,xft:Ubuntu Mono for Powerline:size=9
URxvt*italicFont:      xft:Ubuntu Mono:size=13:antialias=true:autohint=true,xft:Ubuntu Mono for Powerline:size=9
URxvt*boldItalicFont:  xft:Ubuntu Mono:size=13:antialias=true:autohint=true,xft:Ubuntu Mono for Powerline:size=9
URxvt*letterSpace: -1

URxvt*saveLines: 12000
URxvt*scrollBar: false
URxvt*scrollstyle: rxvt

# -- clickable URLs --
URxvt*perl-ext-common: default,matcher
URxvt*urlLauncher: firefox
URxvt*matcher.button: 1
URxvt*colorUL: #86a2be

# -- colors --
! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #60C600
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #F3D758
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #C08CC8
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #00C9CC
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC

